Dim configPath

'/-----------------------------------------------------------------------------/
'/ Get the project configuration file path:                                    /
'/-----------------------------------------------------------------------------/
configPath = SmartTags("configPath")

'/-----------------------------------------------------------------------------/
'/ Clear the start command:                                                    /
'/-----------------------------------------------------------------------------/
SmartTags("sfcStart") = False

'/-----------------------------------------------------------------------------/
'/ Set the SFC data if selected by index number:                               /
'/-----------------------------------------------------------------------------/
@@TEMPLATE_BEGIN|INSTANCE_SFC@@
If (SmartTags("dbHMISFCControl_sfcSelected") = 1@@IDX@@@@SFCIDX@@) Then
	SmartTags("sfcFilenameStep") = configPath & "\hmi@@SFC@@.csv"
	SmartTags("Steps\sfcTitle") = "@@STATEDESCRIPTION@@"
End If

@@TEMPLATE_END@@
End Sub
