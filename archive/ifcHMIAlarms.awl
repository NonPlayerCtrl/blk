FUNCTION "fcHMIAlarms" : Void
TITLE = HMI bit Messaging type Alarms
{ S7_Optimized_Access := 'FALSE' }
AUTHOR : REO
NAME : fcHMIAlarms
VERSION : 2.0

BEGIN
@@TEMPLATE_BEGIN@@
NETWORK
TITLE = @@INSTANCE@@ : @@ALARMDESCRIPTION@@
    //------------------------------------------------------------------------//
    // Set the HMI interface alarm bit if the alarm is active:                //
    //------------------------------------------------------------------------//
    A "idb@@CLASS@@".@@INSTANCE@@.@@ALARM@@;
    = %@@ALARMDB@@.@@ALARMDBX@@.@@ALARMNO@@;
@@TEMPLATE_END@@
END_FUNCTION
